<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/costwold"
            android:scaleType="centerCrop"
            android:id="@+id/imagetoko" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/lapisangradasi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Nama Toko"
            android:textSize="17sp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="33dp"
            android:textColor="@android:color/white"
            android:id="@+id/textnamatoko" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Alamat Toko"
            android:textSize="10sp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="21dp"
            android:textColor="@android:color/white"
            android:id="@+id/textalamattoko" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Daerah Toko"
            android:textSize="10sp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:id="@+id/textdaerahtoko" />


    </RelativeLayout>


</LinearLayout>