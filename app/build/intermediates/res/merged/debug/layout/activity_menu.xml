<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_menu"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.asyariproject.outdoorunion.Menu">

    <ImageView
        android:layout_width="185dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:src="@drawable/menu1"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Temukan toko peralatan \noutdoor dalam genggaman \ntangan anda sekarang \njuga"
        android:textSize="17dp"
        android:textColor="#111111"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:text="Daftar Toko"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounded_shape_btn"
        android:textColor="@android:color/white"
        android:id="@+id/btnDaftartoko" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:text="Tentang Aplikasi"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounded_shape_btn"
        android:textColor="@android:color/white"
        android:id="@+id/btnTentangaplikasi"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:text="Keluar"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounded_shape_btn"
        android:textColor="@android:color/white"
        android:id="@+id/btnKeluar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageview"
        android:background="@drawable/gunung"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />
    </RelativeLayout>

</LinearLayout>


